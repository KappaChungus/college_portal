<div class="max-w-3xl mx-auto">
  <div class="mb-6">
    <%= link_to petitions_path, class: "inline-flex items-center text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100", data: { i18n: "back_to_petitions" } do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <span data-i18n="back_to_petitions">Back to Petitions</span>
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6" data-i18n="new_petition">New Petition</h1>

    <!-- Loading spinner for topics -->
    <div id="topics-loading" class="flex justify-center items-center py-8">
      <svg class="animate-spin h-8 w-8 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="ml-3 text-gray-600 dark:text-gray-300" data-i18n="loading_topics">Loading topics...</span>
    </div>

    <form id="petition-form" class="space-y-6 hidden">
      <div>
        <label for="topic" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <span data-i18n="topic">Topic</span> <span class="text-red-500">*</span>
        </label>
        <select 
          id="topic" 
          name="topic" 
          required
          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors bg-white"
        >
          <option value="" data-i18n="select_topic">Select a topic...</option>
        </select>
      </div>

      <div>
        <label for="petition_content" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <span data-i18n="content">Content</span> <span class="text-red-500">*</span>
        </label>
        <textarea 
          id="petition_content" 
          name="petition_content" 
          required
          rows="8"
          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors resize-none"
          placeholder="Describe your petition in detail..."
          data-i18n="petition_placeholder"
          data-i18n-attr="placeholder"
        ></textarea>
      </div>

      <div id="error-message" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
      
      <div id="success-message" class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg" data-i18n="petition_success">
        Petition submitted successfully! Redirecting...
      </div>

      <div class="flex gap-4">
        <button 
          type="submit" 
          id="submit-button"
          class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          data-i18n="submit_petition"
        >
          Submit Petition
        </button>
        <%= link_to "Cancel", petitions_path, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors text-center", data: { i18n: "cancel" } %>
      </div>
    </form>
  </div>
</div>

<script type="module">
import { apiGet, apiPost } from 'utils/api';
import { hide, show } from 'utils/dom';

window.apiGet = apiGet;
window.apiPost = apiPost;

// Load topics on page load
async function loadTopics() {
  const topicsLoading = document.getElementById('topics-loading');
  const petitionForm = document.getElementById('petition-form');
  const topicSelect = document.getElementById('topic');
  
  try {
    const topics = await apiGet('/api/student/topics');
    
    topics.forEach(topic => {
      const option = document.createElement('option');
      option.value = topic;
      option.textContent = topic;
      topicSelect.appendChild(option);
    });
    
    hide(topicsLoading);
    show(petitionForm);
  } catch (error) {
    console.error('Error loading topics:', error);
    topicsLoading.innerHTML = '<div class="text-red-600 text-center">Failed to load topics. Please refresh the page.</div>';
  }
}

// Load topics when page is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadTopics);
} else {
  loadTopics();
}

document.getElementById('petition-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const submitButton = document.getElementById('submit-button');
  const errorMessage = document.getElementById('error-message');
  const successMessage = document.getElementById('success-message');
  
  hide(errorMessage);
  hide(successMessage);
  
  submitButton.disabled = true;
  submitButton.textContent = window.t ? window.t('submitting') : 'Submitting...';
  
  const topic = document.getElementById('topic').value.trim();
  const petitionContent = document.getElementById('petition_content').value.trim();
  
  if (!topic || !petitionContent) {
    errorMessage.textContent = window.t ? window.t('required_fields') : 'Please fill in all required fields';
    show(errorMessage);
    submitButton.disabled = false;
    submitButton.textContent = window.t ? window.t('submit_petition') : 'Submit Petition';
    return;
  }
  
  try {
    await apiPost('/api/student/petitions', {
      petition: { topic, petition_content: petitionContent }
    });
    
    show(successMessage);
    document.getElementById('petition-form').reset();
    
    setTimeout(() => {
      window.location.href = '<%= petitions_path %>';
    }, 2000);
  } catch (error) {
    console.error('Error submitting petition:', error);
    errorMessage.textContent = window.t ? window.t('submit_error') : 'An error occurred while submitting your petition. Please try again.';
    show(errorMessage);
    submitButton.disabled = false;
    submitButton.textContent = window.t ? window.t('submit_petition') : 'Submit Petition';
  }
});
</script>
