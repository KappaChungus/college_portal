<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">My Petitions</h1>
    <%= link_to "New Petition", new_petition_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
  </div>

  <!-- Petitions List -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <div id="petitions-loading" class="flex items-center justify-center py-12 text-gray-500 dark:text-gray-400">
      <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Loading petitions...
    </div>
    
    <div id="petitions-content" class="hidden space-y-4"></div>
    
    <div id="petitions-empty" class="hidden text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No petitions</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new petition.</p>
      <%= link_to "New Petition", new_petition_path, class: "mt-4 inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
    </div>
    
    <div id="petitions-error" class="hidden text-red-600 dark:text-red-400 text-center py-12"></div>
  </div>
</div>

<script>
async function loadPetitions() {
  console.log('Loading petitions...');
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  
  if (!csrfToken) {
    console.error('CSRF token not found');
    return;
  }

  try {
    const response = await fetch('/api/student/petitions', {
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    console.log('Petitions response status:', response.status);
    
    if (response.ok) {
      const petitions = await response.json();
      console.log('Petitions data:', petitions);
      
      document.getElementById('petitions-loading').classList.add('hidden');
      
      if (petitions.length === 0) {
        document.getElementById('petitions-empty').classList.remove('hidden');
      } else {
        document.getElementById('petitions-content').classList.remove('hidden');
        const container = document.getElementById('petitions-content');
        container.innerHTML = ''; // Clear existing content
        
        petitions.forEach(petition => {
          const statusColors = {
            'pending': 'bg-yellow-100 text-yellow-800',
            'approved': 'bg-green-100 text-green-800',
            'rejected': 'bg-red-100 text-red-800'
          };
          
          const statusColor = statusColors[petition.status] || 'bg-gray-100 text-gray-800';
          
          const petitionCard = document.createElement('div');
          petitionCard.className = 'border border-gray-200 dark:border-gray-700 dark:bg-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow';
          
          const date = new Date(petition.created_at);
          const formattedDate = date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'short', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          });
          
          petitionCard.innerHTML = `
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">${petition.topic}</h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${statusColor}">
                ${petition.status}
              </span>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-3">${petition.petition_content}</p>
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              ${formattedDate}
            </div>
          `;
          
          container.appendChild(petitionCard);
        });
      }
    } else {
      console.error('Petitions request failed with status:', response.status);
      document.getElementById('petitions-loading').classList.add('hidden');
      document.getElementById('petitions-error').classList.remove('hidden');
      document.getElementById('petitions-error').textContent = `Failed to load petitions (${response.status})`;
    }
  } catch (error) {
    console.error('Petitions error:', error);
    document.getElementById('petitions-loading').classList.add('hidden');
    document.getElementById('petitions-error').classList.remove('hidden');
    document.getElementById('petitions-error').textContent = 'Error loading petitions';
  }
}

// Load petitions when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadPetitions);
} else {
  loadPetitions();
}
</script>
