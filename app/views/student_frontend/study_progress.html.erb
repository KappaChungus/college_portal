<script type="module">
import { apiGet } from 'utils/api';
import { setLoadingState } from 'utils/dom';

window.apiGet = apiGet;
window.setLoadingState = setLoadingState;

// Make functions globally accessible for inline onclick handlers
window.togglePassedCourses = togglePassedCourses;
window.toggleFailedCourses = toggleFailedCourses;
window.viewCourseGrades = viewCourseGrades;
window.closeGradesModal = closeGradesModal;

// Use both DOMContentLoaded and a slight delay to ensure everything is ready
async function loadStudentData() {
  console.log('Loading student data...');

  // Fetch Profile
  try {
    console.log('Fetching profile...');
    const profile = await apiGet('/api/student/profile');
    console.log('Profile data:', profile);
    document.getElementById('profile-loading').classList.add('hidden');
    document.getElementById('profile-content').classList.remove('hidden');
    document.getElementById('study-name').textContent = profile.study_name || 'N/A';
    document.getElementById('study-year').textContent = profile.study_year || 'N/A';
    document.getElementById('semester').textContent = profile.semester || 'N/A';
    document.getElementById('specialization').textContent = profile.specialization_field || 'N/A';
  } catch (error) {
    console.error('Profile error:', error);
    document.getElementById('profile-loading').classList.add('hidden');
    document.getElementById('profile-error').classList.remove('hidden');
    document.getElementById('profile-error').textContent = window.t ? window.t('load_error') : 'Error loading profile';
  }

  // Fetch Groups
  try {
    const groups = await apiGet('/api/student/groups');
    document.getElementById('groups-loading').classList.add('hidden');
    document.getElementById('groups-content').classList.remove('hidden');
    
    const groupsContainer = document.getElementById('groups-content');
    groupsContainer.innerHTML = '';
    if (groups.length === 0) {
      groupsContainer.innerHTML = `<p class="text-gray-500 dark:text-gray-400">${window.t ? window.t('no_groups') : 'No groups assigned'}</p>`;
    } else {
      groups.forEach(group => {
        const badge = document.createElement('span');
        badge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200';
        badge.textContent = group.name;
        groupsContainer.appendChild(badge);
      });
    }
  } catch (error) {
    console.error('Groups error:', error);
    document.getElementById('groups-loading').classList.add('hidden');
    document.getElementById('groups-error').classList.remove('hidden');
    document.getElementById('groups-error').textContent = window.t ? window.t('load_error') : 'Error loading groups';
  }

  // Fetch Courses
  try {
    const courses = await apiGet('/api/student/courses');
      window.allCourses = courses; // Store for toggle functions
      
      document.getElementById('courses-loading').classList.add('hidden');
      document.getElementById('courses-content').classList.remove('hidden');
      
      // Filter courses by status
      const currentCourses = courses.filter(c => c.status === 'current');
      const passedCourses = courses.filter(c => c.status === 'passed');
      const failedCourses = courses.filter(c => c.status === 'failed');
      
      // Render current courses
      const tbody = document.getElementById('courses-table-body');
      tbody.innerHTML = '';
      if (currentCourses.length === 0) {
        tbody.innerHTML = `<tr><td colspan="4" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">${window.i18n ? window.i18n.t('no_courses') : 'No current courses'}</td></tr>`;
      } else {
        currentCourses.forEach(course => {
          const row = document.createElement('tr');
          row.className = 'hover:bg-gray-50 dark:hover:bg-gray-700';
          
          row.innerHTML = `
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">${course.course?.code || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">${course.course?.title || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">${course.teacher?.name || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <button onclick="viewCourseGrades(${course.course?.id})" class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm">
                ${window.i18n ? window.i18n.t('view_grades') : 'View Grades'}
              </button>
            </td>
          `;
          tbody.appendChild(row);
        });
      }
      
      // Render passed courses
      const passedSection = document.getElementById('passed-courses-section');
      const passedTbody = document.getElementById('passed-courses-body');
      const passedTable = passedSection.querySelector('.overflow-x-auto');
      
      passedTbody.innerHTML = '';
      if (passedCourses.length === 0) {
        // Hide table, show message
        passedTable.classList.add('hidden');
        const message = document.createElement('p');
        message.className = 'text-gray-500 dark:text-gray-400 text-sm';
        message.textContent = window.i18n ? window.i18n.t('no_courses') : 'No passed courses';
        message.id = 'passed-no-courses-msg';
        if (!passedSection.querySelector('#passed-no-courses-msg')) {
          passedSection.appendChild(message);
        }
      } else {
        // Show table, remove message
        passedTable.classList.remove('hidden');
        const msg = passedSection.querySelector('#passed-no-courses-msg');
        if (msg) msg.remove();
        
        passedCourses.forEach(course => {
          const row = document.createElement('tr');
          row.className = 'hover:bg-gray-50 dark:hover:bg-gray-700';
          
          row.innerHTML = `
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">${course.course?.code || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">${course.course?.title || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">${course.teacher?.name || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600 dark:text-green-400">${course.final_grade || '-'}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <button onclick="viewCourseGrades(${course.course?.id})" class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm">
                ${window.i18n ? window.i18n.t('view_grades') : 'View Grades'}
              </button>
            </td>
          `;
          passedTbody.appendChild(row);
        });
      }
      
      // Render failed courses
      const failedSection = document.getElementById('failed-courses-section');
      const failedTbody = document.getElementById('failed-courses-body');
      const failedTable = failedSection.querySelector('.overflow-x-auto');
      
      failedTbody.innerHTML = '';
      if (failedCourses.length === 0) {
        // Hide table, show message
        failedTable.classList.add('hidden');
        const message = document.createElement('p');
        message.className = 'text-gray-500 dark:text-gray-400 text-sm';
        message.textContent = window.i18n ? window.i18n.t('no_courses') : 'No failed courses';
        message.id = 'failed-no-courses-msg';
        if (!failedSection.querySelector('#failed-no-courses-msg')) {
          failedSection.appendChild(message);
        }
      } else {
        // Show table, remove message
        failedTable.classList.remove('hidden');
        const msg = failedSection.querySelector('#failed-no-courses-msg');
        if (msg) msg.remove();
        
        failedCourses.forEach(course => {
          const row = document.createElement('tr');
          row.className = 'hover:bg-gray-50 dark:hover:bg-gray-700';
          
          row.innerHTML = `
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">${course.course?.code || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">${course.course?.title || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">${course.teacher?.name || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-red-600 dark:text-red-400">${course.final_grade || '-'}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <button onclick="viewCourseGrades(${course.course?.id})" class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm">
                ${window.i18n ? window.i18n.t('view_grades') : 'View Grades'}
              </button>
            </td>
          `;
          failedTbody.appendChild(row);
        });
      }
  } catch (error) {
    console.error('Courses error:', error);
    document.getElementById('courses-loading').classList.add('hidden');
    document.getElementById('courses-error').classList.remove('hidden');
    document.getElementById('courses-error').textContent = window.t ? window.t('load_error') : 'Error loading courses';
  }
}

// Toggle functions for passed/failed courses
function togglePassedCourses() {
  const section = document.getElementById('passed-courses-section');
  const button = document.getElementById('toggle-passed');
  if (section.classList.contains('hidden')) {
    section.classList.remove('hidden');
    button.innerHTML = `<span data-i18n="hide_passed_courses">${window.i18n ? window.i18n.t('hide_passed_courses') : 'Hide Passed Courses'}</span>`;
  } else {
    section.classList.add('hidden');
    button.innerHTML = `<span data-i18n="show_passed_courses">${window.i18n ? window.i18n.t('show_passed_courses') : 'Show Passed Courses'}</span>`;
  }
}

function toggleFailedCourses() {
  const section = document.getElementById('failed-courses-section');
  const button = document.getElementById('toggle-failed');
  if (section.classList.contains('hidden')) {
    section.classList.remove('hidden');
    button.innerHTML = `<span data-i18n="hide_failed_courses">${window.i18n ? window.i18n.t('hide_failed_courses') : 'Hide Failed Courses'}</span>`;
  } else {
    section.classList.add('hidden');
    button.innerHTML = `<span data-i18n="show_failed_courses">${window.i18n ? window.i18n.t('show_failed_courses') : 'Show Failed Courses'}</span>`;
  }
}

// View grades for a specific course
async function viewCourseGrades(courseId) {
  const modal = document.getElementById('grades-modal');
  const content = document.getElementById('grades-modal-content');
  
  modal.classList.remove('hidden');
  content.innerHTML = `
    <div class="flex items-center text-gray-500 dark:text-gray-400">
      <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      ${window.t ? window.t('loading') : 'Loading...'}
    </div>
  `;
  
  try {
    const data = await apiGet(`/api/student/courses/${courseId}/grades`);
    
    let html = `
      <div class="mb-4">
        <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">${data.course.code} - ${data.course.title}</h4>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <span data-i18n="status">Status</span>: <span class="font-medium">${data.status}</span>
        </div>
        ${data.final_grade ? `<div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
          <span data-i18n="final_grade">Final Grade</span>: <span class="font-semibold text-lg text-green-600 dark:text-green-400">${data.final_grade}</span>
        </div>` : ''}
      </div>
      <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
        <h5 class="font-medium text-gray-900 dark:text-gray-100 mb-3">${window.t ? window.t('test_grades') : 'Test Grades'}</h5>
    `;
    
    if (data.grades && data.grades.length > 0) {
      html += '<div class="space-y-3">';
      data.grades.forEach(grade => {
        const name = grade.name || grade.assignment || 'Test';
        const mark = grade.mark !== undefined ? grade.mark : (grade.score !== undefined ? grade.score : 'N/A');
        const date = grade.created_at ? new Date(grade.created_at).toLocaleDateString() : '';
        
        html += `
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-3">
            <div class="flex justify-between items-center">
              <div>
                <div class="font-medium text-gray-900 dark:text-gray-100">${name}</div>
                ${date ? `<div class="text-xs text-gray-500 dark:text-gray-400">${date}</div>` : ''}
              </div>
              <div class="text-lg font-semibold text-blue-600 dark:text-blue-400">${mark} / 20</div>
            </div>
          </div>
        `;
      });
      html += '</div>';
    } else {
      html += `<p class="text-gray-500 dark:text-gray-400 text-sm">${window.t ? window.t('no_grades') : 'No grades yet'}</p>`;
    }
    
    html += '</div>';
    content.innerHTML = html;
  } catch (error) {
    console.error('Grades error:', error);
    content.innerHTML = `<p class="text-red-600 dark:text-red-400">${window.t ? window.t('load_error') : 'Error loading grades'}</p>`;
  }
}

function closeGradesModal() {
  document.getElementById('grades-modal').classList.add('hidden');
}

// Load data when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadStudentData);
} else {
  // DOM is already ready, execute immediately
  loadStudentData();
}
</script>
