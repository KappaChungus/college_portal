<div class="max-w-7xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Study Progress</h1>

  <!-- Student Profile Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      Student Profile
    </h2>
    <div id="profile-loading" class="flex items-center text-gray-500">
      <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Loading...
    </div>
    <div id="profile-content" class="hidden grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-start">
        <span class="font-medium text-gray-600 w-40">Study Name:</span>
        <span id="study-name" class="text-gray-900"></span>
      </div>
      <div class="flex items-start">
        <span class="font-medium text-gray-600 w-40">Study Year:</span>
        <span id="study-year" class="text-gray-900"></span>
      </div>
      <div class="flex items-start">
        <span class="font-medium text-gray-600 w-40">Semester:</span>
        <span id="semester" class="text-gray-900"></span>
      </div>
      <div class="flex items-start">
        <span class="font-medium text-gray-600 w-40">Specialization:</span>
        <span id="specialization" class="text-gray-900"></span>
      </div>
    </div>
    <div id="profile-error" class="hidden text-red-600"></div>
  </div>

  <!-- Groups Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
      </svg>
      My Groups
    </h2>
    <div id="groups-loading" class="flex items-center text-gray-500">
      <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Loading...
    </div>
    <div id="groups-content" class="hidden flex flex-wrap gap-3"></div>
    <div id="groups-error" class="hidden text-red-600"></div>
  </div>

  <!-- Courses Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      My Courses
    </h2>
    <div id="courses-loading" class="flex items-center text-gray-500">
      <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Loading...
    </div>
    <div id="courses-content" class="hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teacher</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Final Grade</th>
            </tr>
          </thead>
          <tbody id="courses-table-body" class="bg-white divide-y divide-gray-200">
          </tbody>
        </table>
      </div>
    </div>
    <div id="courses-error" class="hidden text-red-600"></div>
  </div>
</div>

<script>
// Use both DOMContentLoaded and a slight delay to ensure everything is ready
async function loadStudentData() {
  console.log('Loading student data...');
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  
  if (!csrfToken) {
    console.error('CSRF token not found');
    return;
  }
  
  console.log('CSRF token found, fetching data...');

  // Fetch Profile
  try {
    console.log('Fetching profile...');
    const profileResponse = await fetch('/api/student/profile', {
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    console.log('Profile response status:', profileResponse.status);
    
    if (profileResponse.ok) {
      const profile = await profileResponse.json();
      console.log('Profile data:', profile);
      document.getElementById('profile-loading').classList.add('hidden');
      document.getElementById('profile-content').classList.remove('hidden');
      document.getElementById('study-name').textContent = profile.study_name || 'N/A';
      document.getElementById('study-year').textContent = profile.study_year || 'N/A';
      document.getElementById('semester').textContent = profile.semester || 'N/A';
      document.getElementById('specialization').textContent = profile.specialization_field || 'N/A';
    } else {
      console.error('Profile request failed with status:', profileResponse.status);
      document.getElementById('profile-loading').classList.add('hidden');
      document.getElementById('profile-error').classList.remove('hidden');
      document.getElementById('profile-error').textContent = `Failed to load profile (${profileResponse.status})`;
    }
  } catch (error) {
    console.error('Profile error:', error);
    document.getElementById('profile-loading').classList.add('hidden');
    document.getElementById('profile-error').classList.remove('hidden');
    document.getElementById('profile-error').textContent = 'Error loading profile';
  }

  // Fetch Groups
  try {
    const groupsResponse = await fetch('/api/student/groups', {
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    if (groupsResponse.ok) {
      const groups = await groupsResponse.json();
      document.getElementById('groups-loading').classList.add('hidden');
      document.getElementById('groups-content').classList.remove('hidden');
      
      const groupsContainer = document.getElementById('groups-content');
      groupsContainer.innerHTML = ''; // Clear existing content
      if (groups.length === 0) {
        groupsContainer.innerHTML = '<p class="text-gray-500">No groups assigned</p>';
      } else {
        groups.forEach(group => {
          const badge = document.createElement('span');
          badge.className = 'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800';
          badge.textContent = group.name;
          groupsContainer.appendChild(badge);
        });
      }
    } else {
      document.getElementById('groups-loading').classList.add('hidden');
      document.getElementById('groups-error').classList.remove('hidden');
      document.getElementById('groups-error').textContent = 'Failed to load groups';
    }
  } catch (error) {
    console.error('Groups error:', error);
    document.getElementById('groups-loading').classList.add('hidden');
    document.getElementById('groups-error').classList.remove('hidden');
    document.getElementById('groups-error').textContent = 'Error loading groups';
  }

  // Fetch Courses
  try {
    const coursesResponse = await fetch('/api/student/courses', {
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    if (coursesResponse.ok) {
      const courses = await coursesResponse.json();
      document.getElementById('courses-loading').classList.add('hidden');
      document.getElementById('courses-content').classList.remove('hidden');
      
      const tbody = document.getElementById('courses-table-body');
      tbody.innerHTML = ''; // Clear existing content
      if (courses.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" class="px-6 py-4 text-center text-gray-500">No courses enrolled</td></tr>';
      } else {
        courses.forEach(course => {
          const row = document.createElement('tr');
          row.className = 'hover:bg-gray-50';
          
          const statusClass = {
            'current': 'bg-blue-100 text-blue-800',
            'passed': 'bg-green-100 text-green-800',
            'failed': 'bg-red-100 text-red-800'
          }[course.status] || 'bg-gray-100 text-gray-800';
          
          row.innerHTML = `
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${course.course?.code || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${course.course?.title || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">${course.teacher?.name || 'N/A'}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${statusClass}">
                ${course.status}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${course.final_grade || '-'}</td>
          `;
          tbody.appendChild(row);
        });
      }
    } else {
      document.getElementById('courses-loading').classList.add('hidden');
      document.getElementById('courses-error').classList.remove('hidden');
      document.getElementById('courses-error').textContent = 'Failed to load courses';
    }
  } catch (error) {
    console.error('Courses error:', error);
    document.getElementById('courses-loading').classList.add('hidden');
    document.getElementById('courses-error').classList.remove('hidden');
    document.getElementById('courses-error').textContent = 'Error loading courses';
  }
}

// Load data when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadStudentData);
} else {
  // DOM is already ready, execute immediately
  loadStudentData();
}
</script>
