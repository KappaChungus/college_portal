<div class="max-w-7xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8" data-i18n="dashboard">Dashboard</h1>

  <!-- Announcements Section -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
          </svg>
          <span data-i18n="announcements">Announcements</span>
        </h2>
        <button onclick="openAddAnnouncementModal()" class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span data-i18n="add_announcement">Add</span>
        </button>
      </div>
      
      <div id="announcements-loading" class="flex items-center text-gray-500 dark:text-gray-400">
        <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span data-i18n="loading">Loading...</span>
      </div>
      
      <div id="announcements-content" class="hidden">
        <div id="announcements-list" class="space-y-4 mb-4"></div>
        
        <!-- Pagination Controls -->
        <div id="announcements-pagination" class="hidden flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
          <button id="prev-announcements" onclick="changeAnnouncementsPage(-1)" 
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled>
            <span data-i18n="previous">Previous</span>
          </button>
          
          <span id="announcements-page-info" class="text-sm text-gray-600 dark:text-gray-400"></span>
          
          <button id="next-announcements" onclick="changeAnnouncementsPage(1)" 
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed">
            <span data-i18n="next">Next</span>
          </button>
        </div>
      </div>
      
      <div id="announcements-error" class="hidden text-red-600 dark:text-red-400"></div>
  </div>
</div>

<!-- Add Announcement Modal -->
<div id="add-announcement-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full mx-4">
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100" data-i18n="add_announcement">Add Announcement</h3>
        <button onclick="closeAddAnnouncementModal()" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form id="announcement-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="title">Title</label>
          <input type="text" id="announcement-title" required
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="content">Content</label>
          <textarea id="announcement-content" rows="4" required
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        
        <div class="flex justify-end space-x-3 pt-4">
          <button type="button" onclick="closeAddAnnouncementModal()"
                  class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
            <span data-i18n="cancel">Cancel</span>
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
            <span data-i18n="create">Create</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Announcement Modal -->
<div id="edit-announcement-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full mx-4">
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100" data-i18n="edit_announcement">Edit Announcement</h3>
        <button onclick="closeEditAnnouncementModal()" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form id="edit-announcement-form" class="space-y-4">
        <input type="hidden" id="edit-announcement-id">
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="title">Title</label>
          <input type="text" id="edit-announcement-title" required
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="content">Content</label>
          <textarea id="edit-announcement-content" rows="4" required
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        
        <div class="flex justify-end space-x-3 pt-4">
          <button type="button" onclick="closeEditAnnouncementModal()"
                  class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
            <span data-i18n="cancel">Cancel</span>
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
            <span data-i18n="save">Save</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Pagination state
let allAnnouncements = [];
let currentAnnouncementsPage = 0;
const announcementsPerPage = 3;

function renderAnnouncements() {
  const container = document.getElementById('announcements-list');
  container.innerHTML = '';
  
  if (allAnnouncements.length === 0) {
    container.innerHTML = '<p class="text-gray-500 dark:text-gray-400 text-sm">' + 
                          (window.i18n ? window.i18n.t('no_announcements') : 'No announcements') + 
                          '</p>';
    document.getElementById('announcements-pagination').classList.add('hidden');
    return;
  }
  
  // Calculate pagination
  const startIndex = currentAnnouncementsPage * announcementsPerPage;
  const endIndex = startIndex + announcementsPerPage;
  const pageAnnouncements = allAnnouncements.slice(startIndex, endIndex);
  const totalPages = Math.ceil(allAnnouncements.length / announcementsPerPage);
  
  // Render announcements
  pageAnnouncements.forEach(announcement => {
    const date = new Date(announcement.date).toLocaleDateString();
    const isMyAnnouncement = announcement.teacher && announcement.teacher.id === <%= current_user.id %>;
    const card = document.createElement('div');
    card.className = 'border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-900/20 p-4 rounded-r';
    
    let actionButtons = '';
    if (isMyAnnouncement) {
      actionButtons = `
        <div class="flex items-center space-x-2 ml-2">
          <button onclick="editAnnouncement(${announcement.id})" class="text-gray-600 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" title="${window.i18n ? window.i18n.t('edit') : 'Edit'}">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          </button>
          <button onclick="deleteAnnouncement(${announcement.id})" class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300" title="${window.i18n ? window.i18n.t('delete') : 'Delete'}">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>
      `;
    }
    
    card.innerHTML = `
      <div class="flex justify-between items-start mb-2">
        <h3 class="font-semibold text-gray-900 dark:text-gray-100">${announcement.title}</h3>
        <div class="flex items-center">
          <span class="text-xs text-gray-500 dark:text-gray-400">${date}</span>
          ${actionButtons}
        </div>
      </div>
      <p class="text-sm text-gray-700 dark:text-gray-300 mb-2">${announcement.content}</p>
      <p class="text-xs text-gray-500 dark:text-gray-400">
        ${window.i18n ? window.i18n.t('by') : 'By'}: ${announcement.teacher ? announcement.teacher.name : 'Unknown'}
      </p>
    `;
    container.appendChild(card);
  });
  
  // Update pagination controls
  if (totalPages > 1) {
    document.getElementById('announcements-pagination').classList.remove('hidden');
    document.getElementById('announcements-page-info').textContent = 
      `${currentAnnouncementsPage + 1} / ${totalPages}`;
    
    // Update button states
    document.getElementById('prev-announcements').disabled = currentAnnouncementsPage === 0;
    document.getElementById('next-announcements').disabled = currentAnnouncementsPage >= totalPages - 1;
  } else {
    document.getElementById('announcements-pagination').classList.add('hidden');
  }
}

function changeAnnouncementsPage(direction) {
  const totalPages = Math.ceil(allAnnouncements.length / announcementsPerPage);
  const newPage = currentAnnouncementsPage + direction;
  
  if (newPage >= 0 && newPage < totalPages) {
    currentAnnouncementsPage = newPage;
    renderAnnouncements();
  }
}

async function loadDashboardData() {
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  
  if (!csrfToken) {
    console.error('CSRF token not found');
    return;
  }

  // Show loading state
  document.getElementById('announcements-loading').classList.remove('hidden');
  document.getElementById('announcements-content').classList.add('hidden');
  document.getElementById('announcements-error').classList.add('hidden');

  // Load Announcements
  try {
    const announcementsResponse = await fetch('/api/teacher/announcements', {
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    if (announcementsResponse.ok) {
      allAnnouncements = await announcementsResponse.json();
      currentAnnouncementsPage = 0; // Reset to first page
      document.getElementById('announcements-loading').classList.add('hidden');
      document.getElementById('announcements-content').classList.remove('hidden');
      renderAnnouncements();
    } else {
      document.getElementById('announcements-loading').classList.add('hidden');
      document.getElementById('announcements-error').classList.remove('hidden');
      document.getElementById('announcements-error').textContent = 
        window.i18n ? window.i18n.t('load_error') : 'Failed to load announcements';
    }
  } catch (error) {
    console.error('Announcements error:', error);
    document.getElementById('announcements-loading').classList.add('hidden');
    document.getElementById('announcements-error').classList.remove('hidden');
    document.getElementById('announcements-error').textContent = 
      window.i18n ? window.i18n.t('load_error') : 'Error loading announcements';
  }
}

// Modal functions
function openAddAnnouncementModal() {
  document.getElementById('add-announcement-modal').classList.remove('hidden');
}

function closeAddAnnouncementModal() {
  document.getElementById('add-announcement-modal').classList.add('hidden');
  document.getElementById('announcement-form').reset();
}

function openEditAnnouncementModal(announcement) {
  document.getElementById('edit-announcement-modal').classList.remove('hidden');
  document.getElementById('edit-announcement-id').value = announcement.id;
  document.getElementById('edit-announcement-title').value = announcement.title;
  document.getElementById('edit-announcement-content').value = announcement.content;
}

function closeEditAnnouncementModal() {
  document.getElementById('edit-announcement-modal').classList.add('hidden');
  document.getElementById('edit-announcement-form').reset();
}

function editAnnouncement(id) {
  const announcement = allAnnouncements.find(a => a.id === id);
  if (announcement) {
    openEditAnnouncementModal(announcement);
  }
}

// Handle create form submission
document.getElementById('announcement-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  const title = document.getElementById('announcement-title').value;
  const content = document.getElementById('announcement-content').value;
  const today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
  
  try {
    const response = await fetch('/api/teacher/announcements', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': csrfToken,
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      credentials: 'same-origin',
      body: JSON.stringify({
        announcement: {
          title: title,
          content: content,
          date: today
        }
      })
    });
    
    if (response.ok) {
      closeAddAnnouncementModal();
      loadDashboardData(); // Reload announcements
    } else {
      const error = await response.json();
      alert('Error: ' + (error.errors ? error.errors.join(', ') : 'Failed to create announcement'));
    }
  } catch (error) {
    console.error('Error creating announcement:', error);
    alert('Error creating announcement');
  }
});

// Handle edit form submission
document.getElementById('edit-announcement-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  const id = document.getElementById('edit-announcement-id').value;
  const title = document.getElementById('edit-announcement-title').value;
  const content = document.getElementById('edit-announcement-content').value;
  // Get the original announcement date to preserve it
  const announcement = allAnnouncements.find(a => a.id === parseInt(id));
  const date = announcement ? announcement.date : new Date().toISOString().split('T')[0];
  
  try {
    const response = await fetch(`/api/teacher/announcements/${id}`, {
      method: 'PUT',
      headers: {
        'X-CSRF-Token': csrfToken,
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      credentials: 'same-origin',
      body: JSON.stringify({
        announcement: {
          title: title,
          content: content,
          date: date
        }
      })
    });
    
    if (response.ok) {
      closeEditAnnouncementModal();
      loadDashboardData(); // Reload announcements
    } else {
      const error = await response.json();
      alert('Error: ' + (error.errors ? error.errors.join(', ') : 'Failed to update announcement'));
    }
  } catch (error) {
    console.error('Error updating announcement:', error);
    alert('Error updating announcement');
  }
});

// Delete announcement
async function deleteAnnouncement(id) {
  if (!confirm(window.i18n ? window.i18n.t('confirm_delete') : 'Are you sure you want to delete this announcement?')) {
    return;
  }
  
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
  
  try {
    const response = await fetch(`/api/teacher/announcements/${id}`, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': csrfToken,
        'Accept': 'application/json'
      },
      credentials: 'same-origin'
    });
    
    if (response.ok) {
      loadDashboardData(); // Reload announcements
    } else {
      alert('Error deleting announcement');
    }
  } catch (error) {
    console.error('Error deleting announcement:', error);
    alert('Error deleting announcement');
  }
}

// Load data when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', loadDashboardData);
} else {
  loadDashboardData();
}

// Reload on language change
window.addEventListener('languageChanged', loadDashboardData);

// Reload when navigating back to this page (Turbo)
document.addEventListener('turbo:before-cache', function() {
  // Reset to loading state before caching to avoid showing stale data
  document.getElementById('announcements-loading').classList.remove('hidden');
  document.getElementById('announcements-content').classList.add('hidden');
  document.getElementById('announcements-error').classList.add('hidden');
});

document.addEventListener('turbo:load', loadDashboardData);
</script>
